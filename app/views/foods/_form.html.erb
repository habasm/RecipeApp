<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div class="text-white">
      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: 'text-white'  %>
    <%= form.text_field :Name %>
  </div>

  <div>
    <%= form.label :measurement_unit, class: 'text-white'  %>
    <%= form.text_field :Measurement_id %>
  </div>

  <div>
    <%= form.label :price, class: 'text-white'  %>
    <%= form.text_field :Price %>
  </div>

  <div>
    <%= form.label :quantity, class: 'text-white' %>
    <%= form.number_field :Quantity %>
  </div>

  <div class="my-3">
    <%= form.submit :Submit, class: 'btn btn-warning' %>
  </div>
<% end %>