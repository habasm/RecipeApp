<h1> Food List </h1>
<div class="container-fluid d-flex flex-column align-items-center mx-2 px-4">
<%= link_to "Add Food", new_food_path, class: 'btn btn-warning' %>
 <% if @foods.empty? %>
  <h2> No Food item on record </h2>
  <% else %>
<table class="text-white" border="1px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
      <% @foods.each do |food| %>
       <tr>
        <td><%= food.Name %></td>
        <td><%= food.Measurement_id %></td>
        <td><%= food.Price %></td>
        <td><%= food.Quantity %></td>
        <td>
        <%= link_to 'Delete food', food, data:  {
                       turbo_method: :delete, 
                       turbo_confirm: "Are you sure?"}, 
                       class: "comment-like btn btn-warning" %>
        </td>
        <td><%= link_to "Edit Food", edit_food_path(food), class: "comment-like btn btn-warning" %></td>
      </tr>
   <% end %>
</tbody>
</table>
 <% end %> 
</div>

